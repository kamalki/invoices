<h1>Listing passengers</h1>

<table>
  <thead>
    <tr>
      <th>Pnr</th>
      <th>Passenger name</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Seat no</th>
      <th>Class</th>
      <th>Fare</th>
      <th>Source</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passengers.each do |passenger| %>
      <tr>
        <td><%= passenger.PNR %></td>
        <td><%= passenger.passenger_name %></td>
        <td><%= passenger.Gender %></td>
        <td><%= passenger.Age %></td>
        <td><%= passenger.Seat_no %></td>
        <td><%= passenger.Class %></td>
        <td><%= passenger.Fare %></td>
        <td><%= passenger.Source_id %></td>
        <td><%= passenger.Destination_id %></td>
        <td><%= link_to 'Show', passenger %></td>
        <td><%= link_to 'Edit', edit_passenger_path(passenger) %></td>
        <td><%= link_to 'Destroy', passenger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

