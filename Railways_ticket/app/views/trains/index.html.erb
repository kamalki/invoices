<h1>Listing trains</h1>

<table>
  <thead>
    <tr>
      <th>Train name</th>
      <th>Train type</th>
      <th>Seats class1</th>
      <th>Seats class2</th>
      <th>Fare class1</th>
      <th>Fare class2</th>
      <th>Available days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trains.each do |train| %>
      <tr>
        <td><%= train.train_name %></td>
        <td><%= train.train_type %></td>
        <td><%= train.seats_class1 %></td>
        <td><%= train.seats_class2 %></td>
        <td><%= train.fare_class1 %></td>
        <td><%= train.fare_class2 %></td>
        <td><%= train.available_days %></td>
        <td><%= link_to 'Show', train %></td>
        <td><%= link_to 'Edit', edit_train_path(train) %></td>
        <td><%= link_to 'Destroy', train, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

